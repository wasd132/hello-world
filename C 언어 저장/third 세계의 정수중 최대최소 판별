#include<stdio.h>

void main()
{
	int a, b, c;
	int max, min;
	printf("변수를 입력하시오:");
	scanf_s("%d", &a);
	printf("변수를 입력하시오:");
	scanf_s("%d", &b);
	printf("변수를 입력하시오:");
	scanf_s("%d", &c);

	if (a >= b)
	{
		max = a;
		min = b;
	}
	else if (a<= b)
	{
		max = b;
		min = a;
	}
	if (c > max)
		max = c;
	if (c < max)
		min = c;
	printf("세개의 변수중 최대값은 %d이고,", max);
	printf("최솟값은 %d이다.", min);
}
